<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductFormActivity"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textColor="@color/aqua"
            android:text="@string/title_add_product"
            android:textSize="42sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageProductToAdd"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_margin="15dp"
                app:srcCompat="@drawable/fondo"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/titleNameProductToAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="@string/tittle_add_product_name"

                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/patrick_hand"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:typeface="normal"
                    />

                <EditText
                    android:id="@+id/nameProductToAdd"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/titleDescriptionProductToAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tittle_add_product_description"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/patrick_hand"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:typeface="normal"/>

                <EditText
                    android:id="@+id/descriptionProductToAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/titlePriceProductToAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tittle_add_product_price"

                    android:layout_margin="10dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/patrick_hand"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:typeface="normal"/>

                <EditText
                    android:id="@+id/priceProductToAdd"
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSaveNewProduct"
            android:text="@string/tittle_save_product"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/patrick_hand"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>